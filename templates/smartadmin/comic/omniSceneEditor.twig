        var windowHeight = 600;


        function openWindow(){
            $('#paralaksa-lookout-target').html('')
            $('#modal-paralaksa-lookout-target').css('display', 'flex')
            $('#paralaksa-lookout-target').css('height', windowHeight)
            $('#modal-paralaksa-lookout-target').on('click', function () {
                $('#modal-paralaksa-lookout-target').css('display', 'none')
            })
            var finishedImage = '';

            var it0=0;
            layers.forEach(function (elm) {
                console.log(elm)
                $('#paralaksa-lookout-target').append('<img id="imgLookout-'+it0+'" class="imgLookout" data-speed="'+elm.prlxSpd+'" data-id="'+elm.id+'" src="'+elm.url+'" style="width: '+elm.width+'px; height: '+elm.height+'px; top: '+elm.posy+'px; left: '+elm.posx+'px; position: absolute; opacity: '+elm.opacity+'">')
                it0++
                left[elm.id] = elm.posx
            })
        }

        function getWidth() {
            return Math.max(
                document.body.scrollWidth,
                document.documentElement.scrollWidth,
                document.body.offsetWidth,
                document.documentElement.offsetWidth,
                document.documentElement.clientWidth
            );
        }
        var objLeft = $("#paralaksa-lookout-target").offset().left;
        let currentMousePos = [];
        var left = [];


        $("#modal-paralaksa-lookout-target").mousemove(function(e) {
                currentMousePos.x = e.pageX;
                currentMousePos.y = e.pageY;

                objLeft = $("#paralaksa-lookout-target").offset().left;
                var percent = (getWidth() - (objLeft + $("#paralaksa-lookout-target").width() / 2)) / 100

                var objCenterX = objLeft + $("#paralaksa-lookout-target").width() / 2;




            if (currentMousePos.x - objCenterX > 0){
                $('.imgLookout').each(function(i, layer) {
                    var id = layer.id
                    $('#'+id).css('left', left[layer.getAttribute('data-id')] + ((1 * layer.getAttribute('data-speed') * Math.round((currentMousePos.x - objCenterX) / percent)) / 2))
                })
            }else if (currentMousePos.x - objCenterX < 0){
                $('.imgLookout').each(function(i, layer) {
                    var id = layer.id
                    $('#'+id).css('left', left[layer.getAttribute('data-id')] + ((1 * layer.getAttribute('data-speed') * Math.round((currentMousePos.x - objCenterX) / percent)) / 2))
                })
            }

            // for(var i=layers.length; i>0;i--){
            //     $('#imgLookout-'+(i-1)).css('left', layerscurrentMousePos.x - objCenterX)
            // }

        })

        let sendLayers = {}
        function saveObject(){

            console.log(layers)
            var it0 = 0;
            layers.forEach(function (elm){
            sendLayers[it0] =
                {
                    'width': elm.width,
                    'height': elm.height,
                    'posx': elm.posx,
                    'posy': elm.posy,
                    'rot': elm.rot,
                    'opacity': elm.opacity,
                    'name': elm.name,
                    'speed': elm.prlxSpd,
                    'id': elm.objid
                }
                it0++
            })
            console.log(sendLayers)
            $.ajax('{{ path('OmniEditor_save_Object') }}', {
                method: "POST",
                data: {
                    'layers': sendLayers,
                    'height': windowHeight,
                    '_token': '{{ csrf_token('saveObject') }}'
                },
                success: function (data) {

                }
            });
        }
    </script>
