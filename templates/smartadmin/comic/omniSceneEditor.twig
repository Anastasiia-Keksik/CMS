{% extends 'smartadmin/base.html.twig' %}

{% block content %}
    <style>
        #layer-window .ui-selecting { background: lightcyan; }
        #layer-window .ui-selected { background: aliceblue; color: black; }
        #layer-window div { margin-left: 16px; height: 42px}
    </style>
    <!-- BEGIN Page Content -->
    <!-- the #js-page-content id is needed for some plugins to initialize -->
    <main id="js-page-content" role="main" class="page-content">
        <!-- Your main content goes below here: -->
        <div class="row" style="margin-top: 66px; margin-right: 0; margin-left: 0;">
            <div id="shock-wrapper" class="m-auto" style="width: 800px; height: 600px; outline: 1px solid black; border-bottom: 1px black solid; z-index: 1">
                <div id="shock-wave" class="zoom" style="width: inherit; height: inherit">
                    <canvas id="canvas" width="800" height="600">

                    </canvas>
                </div>
            </div>

        </div>
            <!-- images all -->
            <div id="images-Panel" class="position-absolute clearfix d-inline-flex align-items-end" style="top: 66px; z-index: 2; margin-left: 0px">
                <div class="panel float-left mb-0 p-2 rounded-0" style="width: 300px; height: calc(100vh - 66px)">
                    <div class="row">
                        <div class="col-12">
                            <div class="btn-group mb-3 w-100">
                                <a href="#" class="btn btn-danger" style="width: 25%">RESET</a>
                                <a href="javascript:saveObject()" class="btn btn-success" style="width: 75%" >SAVE</a>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin: 0; max-height: calc(100vh - 66px - 80px); overflow-y: auto">
                        {% for img in user.UserToAObjMTM  %}
                            {% if img.Obj.type == 1 %}
                                {% if loop.index is even %}
                                    <div class="col-6 mb-2 pr-0 pl-1" >
                                        <img width="100%" class="image-drag draggable rounded" data-imagename="{{ absolute_url(asset('upload/object/image/'~img.Obj.FileName)) }}" data-usertoobjconid="{{ img.id }}" data-objid="{{ img.Obj.id }}" src="{{ asset('upload/object/image/thumb/'~img.Obj.FileName) }}">
                                    </div>
                                        {% else %}
                                    <div class="col-6 mb-2 pl-0 pr-1" >
                                        <img width="100%" class="image-drag draggable rounded" data-imagename="{{ absolute_url(asset('upload/object/image/'~img.Obj.FileName)) }}" data-usertoobjconid="{{ img.id }}" data-objid="{{ img.Obj.id }}" src="{{ asset('upload/object/image/thumb/'~img.Obj.FileName) }}">
                                    </div>

                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="row" style="bottom: 0; margin:0">
                        <div class="col-12 p-0">
                            <button class="btn-success btn btn-sm w-100" data-toggle="modal" data-target="#upload-objects">Upload Objects</button>
                        </div>
{#                        <div class="col-12 pt-2 px-0" style="border-top: 1px #333 solid">#}
{#                            <i class="far fa-search-plus" onclick="zoom('in')" style="z-index: 4"></i>#}
{#                            <i class="far fa-search-minus" onclick="zoom('out')" style="z-index:4"></i>#}
{#                        </div>#}
                    </div>
                </div>
            </div>
            <!-- images all end -->


            <!-- layers -->

            <div id="layers-Panel" class="position-absolute" style="right: 0; top: 66px; z-index: 1">
                <div class="panel mb-0 p-2 rounded-0" style="min-width: 300px; min-height: 56px">
                    <div class="row" style="margin-right: 0">
                        <div class="col-12 p-0">
                            <div id="layer-window">

                            </div>
                        </div>
                    </div>
                </div>
                <div id="properties" class="panel rounded-right-0 rounded-top-left-0" style="min-height: 200px">
                    <div class="row my-2" style="margin: 0">
                        <div class="col-6 pt-2">
                            Scene height:
                        </div>
                        <div class="col-6">
                            <input type="number" id="formSceneHeight" name="sceneHeight" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-2" style="margin: 0">
                        <div class="col-6">
                            <label>Width</label>
                            <input type="number" id="formWidth" name="width" class="form-control">
                        </div>
                        <div class="col-6">
                            <label>Height</label>
                            <input type="number" id="formHeight" class="form-control" name="height">
                        </div>
                    </div>
                    <div class="row mb-2" style="margin: 0">
                        <div class="col-6">
                            <label>Pox x</label>
                            <input type="number" id="formPosX" class="form-control" name="posx">
                        </div>
                        <div class="col-6">
                            <label>Pos y</label>
                            <input type="number" id="formPosY" class="form-control" name="posy">
                        </div>
                    </div>
                    <div class="row mb-3" style="margin: 0">
                        <div class="col-6">
                            <label>Angle</label>
                            <input type="number" id="formRot" class="form-control" name="rotation">
                        </div>
                        <div class="col-6">
                            <label>Opacity</label>
                            <input type="number" id="formOpacity" class="form-control" step="0.01" name="opacity">
                        </div>
                    </div>
                    <div class="row" style="margin: 0">
                        <div class="col-12">
                            <a href="javascript:openWindow()" class="btn btn-outline-default">Checkout paralaksa</a>
                        </div>
                    </div>
                    <div class="row my-2" style="margin: 0">
                        <div class="col-6 pt-2">
                            Parallax speed:
                        </div>
                        <div class="col-6">
                            <input type="number" id="formParallaxSpeed" name="parallaxSpeed" class="form-control" step="0.1">
                        </div>
                    </div>
                </div>
            </div>
            <!-- end of layers -->


        <!-- upload object images -->
        <div class="modal fade" id="upload-objects" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="panel-container mb-2">
                            <label>Upload episode files:</label>
                            <form action="{{ path('upload_Obj') }}" id="uploadComic" class="dropzone needsclick upload" style="min-height: 7rem;" >
                                <div class="dz-message needsclick">
                                    <i class="fal fa-cloud-upload text-muted mb-3"></i> <br>
                                    <span class="text-uppercase">Drop files here or click to upload.</span>
                                    <br>
                                </div>
{#                                <input type="hidden" name="_token" value="{{ csrf_token('image_upload') }}">#}
{#                                <input type="hidden" name="cid" value="{{ project.ComicEpisode.Comic.id }}">#}
{#                                <input type="hidden" name="eid" value="{{ project.ComicEpisode.id }}">#}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end of upload objects -->

        <!-- lookout -->
        <div id="modal-paralaksa-lookout-target" class="position-fixed justify-content-center" style="display: none; top: 0; left: 0; background-color: rgba(0,0,0,0.8); z-index: 6; width: 100%; min-height: 100vh">
            <div id="paralaksa-lookout-target" class="overflow-hidden position-relative" style="margin-top: 66px; background: white; border: 1px black solid; width: 800px; height: 500px; overflow: hidden">
            </div>
        </div>
    </main>
    <!-- this overlay is activated only when mobile menu is triggered -->
    <div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div> <!-- END Page Content -->
{% endblock %}

